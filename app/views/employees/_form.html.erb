<% if @employee.try(:percent_revenue_generating) %>
  <% @employee.percent_revenue_generating = @employee.percent_revenue_generating * 100 %>
<% end %>
<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :first_name, :placeholder => 'First Name' %>
  </div>
  <div class="field">
    <%= f.text_field :last_name, :placeholder => 'Last Name' %>
  </div>
  <div class="field">
    <%= f.text_field :email, :placeholder => 'Email' %>
  </div>
  <div class="field">
    <%= f.text_field :title, :placeholder => 'Title' %>
  </div>
  <div class="field">
    <%= f.select :category, ['Owner', 'Relationship Management', 'Recruitment', 'Research', 'Administrative'], :placeholder => 'Category' %>
  </div>
  <div class="field">
    <%= f.label :current_salary %><br />
    <%= f.number_field :current_salary %>
  </div>
  <div class="field">
    <%= f.label :percent_revenue_generating, '% Revenue Generating' %><br />
    <%= f.text_field :percent_revenue_generating, :placeholder => '%' %>
  </div>
  <div class="field">
    <%= f.label :factor_goal %><br />
    <%= f.number_field :factor_goal %>
  </div>
  <div class="field">
    <%= f.label :days_off, '# Days Off' %><br />
    <%= f.number_field :days_off %>
  </div>
    <div class="field">
    <%= f.label :hours_per_day %><br />
    <%= f.number_field :hours_per_day %>
  </div>
  <fieldset>
    <div class="actions">
      <center><%= f.submit "Save Employee", :class => 'btn btn-primary' %></center>
    </div>
  </fieldset>
<% end %>
