    <div id="error_explanation">
      <h2><%= pluralize(@employee_budget.errors.count, "error") %> prohibited this employee_budget from being saved:</h2>

      <ul>
      <% @employee_budget.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :budget_id %>

  <div class="field">
